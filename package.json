{
    "name": "root",
    "private": true,
    "version": "0.0.0",
    "description": "Monorepo of Sveltr library",
    "homepage": "https://github.com/radiium/sveltr",
    "license": "MIT",
    "author": {
        "name": "radiium",
        "email": "remip.dev@gmail.com",
        "url": "https://github.com/radiium"
    },
    "keywords": [
        "svelte",
        "sveltekit",
        "ui",
        "library",
        "ui-components",
        "components",
        "components-library",
        "open-source",
        "typescript",
        "web",
        "monorepo"
    ],
    "bugs": {
        "url": "https://github.com/radiium/sveltr/issues"
    },
    "main": "index.js",
    "engines": {
        "node": ">=20",
        "pnpm": ">=9"
    },
    "scripts": {
        "-- DEV": "",
        "dev": "concurrently \"pnpm:dev:lib:watch\" \"pnpm:dev:docs\"",
        "dev:lib": "pnpm --filter=sveltr -r dev",
        "dev:lib:watch": "pnpm --filter=sveltr -r package:watch",
        "dev:docs": "pnpm --filter=docs -r dev",
        "-- BUILD": "",
        "build": "pnpm --filter=!@configs/** -r build",
        "build:packages": "pnpm --filter=sveltr --parallel build",
        "build:sites": "pnpm --filter=docs --parallel build:content",
        "-- UTILS": "",
        "check": "pnpm --filter=!@configs/** -r check",
        "lint": "pnpm --filter=!@configs/** -r lint",
        "format": "pnpm --filter=!@configs/** -r format",
        "test": "pnpm --filter=sveltr -r test",
        "package": " pnpm --filter=sveltr -r package",
        "ci:publish": " pnpm build:packages && changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.9",
        "concurrently": "^9.0.1"
    }
}